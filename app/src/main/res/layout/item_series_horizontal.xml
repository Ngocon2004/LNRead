<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_series_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_series_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Series Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_series_image"
        app:layout_constraintTop_toTopOf="@id/iv_series_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/tv_series_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Author"
        app:layout_constraintStart_toEndOf="@id/iv_series_image"
        app:layout_constraintTop_toBottomOf="@id/tv_series_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>