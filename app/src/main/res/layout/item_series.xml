<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_series_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_series_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Series Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_series_image"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/tv_series_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/tv_series_name"
        app:layout_constraintStart_toStartOf="@+id/tv_series_name"
        app:layout_constraintTop_toBottomOf="@id/tv_series_name" />

</androidx.constraintlayout.widget.ConstraintLayout>